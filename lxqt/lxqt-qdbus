abi <abi/4.0>,

include <tunables/global>

@{exec_pathlxx1} = @{bin}/lxqt-qdbus
profile lxqt-qdbus @{exec_pathlxx1} {
  include <abstractions/base>
  include <abstractions/consoles>
  include <abstractions/lxqt>
  include <abstractions/nameservice-strict>

  capability sys_nice,

  @{exec_pathlxx1}                      mr,

  @{bin}/cat    rix,
  @{bin}/grep   rix,
  @{bin}/head   rix,
  @{bin}/notify-send rix,
  @{bin}/wpctl  rPx,

  @{lib}/qt6/bin/qdbus  rPx,

  /usr/share/icons/{,**}                r,
  /usr/share/desktop-directories/{,**}  r,

  /etc/xdg/menus/lxqt-applications.menu r,

  @{PROC}/@{pid}/cgroup r,

  /dev/tty                              rw,
  /dev/pts/@{u8}                        rw,

  include if exists <local/lxqt-qdbus>
}
# vim:syntax=apparmor
