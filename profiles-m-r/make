abi <abi/3.0>,

include <tunables/global>

@{exec_pathmake} = @{bin}/make
profile make @{exec_pathmake} {
  include <abstractions/base>

  capability dac_read_search,
  capability dac_override,

  /usr/bin/cmake Px,

  @{exec_pathmake}   mr,

  owner /** r,
  owner /**/ r,

  owner /tmp/@{rand8}  rw,

  owner /dev/pts/@{int} rw,

  include if exists <local/make>
}

# vim:syntax=apparmor
